<div class="login-form">
  <div>Please enter your login credentials below:</div>
  <div>
    <%= form_with(url: login_path, scope: :session, local: true) do |form| %>


      <div class="actions">
        <%= form.label :email %>
        <%= form.email_field :email %>

        <%= form.label :password %>
        <%= form.password_field :password %>

        <%= form.submit "Log in"%>
      </div>

    <% end %>
  </div>


  <div class="danger">
    <%= flash[:danger] %>
  </div>

  <div class="notice">
    <%= flash[:notice] %>
  </div>

</div>