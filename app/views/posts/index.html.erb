<div>
  <%= current_user.posts.count <= 0 ? "Make your first post!" : "You have made " + current_user.posts.count.to_s + " posts" %>
  <br/>
  <div class="row">

    <div class="column left">
      <p><-- Shortcuts go here --></p>
      <div id="subtitle">
        Your shortcuts
      </div>
    </div>

    <div class="column middle">
      <div id="subtitle">
        Global posts feed
      </div>
      <div id="form">
        <%= form_with(scope: :post, url: '/posts') do |form| %>
          Create a new post
          <br/>
          <%= form.text_area :message, id: 'message_content' %>
          <br/>
          <%= form.submit "Submit" %>
        <% end %>
      </div>
      <div class="notice"><%= flash[:alert] %></div>
      <p>
        <% @posts.each do |post| %>
        <p> <%= post.owner %> posted: </p>
        <p><%= post.message.gsub(/(\r)?\n/, "<br/>").html_safe %><p>
        <% if post.updatable? && (post.user_id == current_user.id) %>
          <div id="update_post">
            <%= form_with(model: post) do |form| %>
              <%= form.text_area :message, id: 'message_content' %>
              <br/>
              <%= form.submit "Update" %>
            <% end %>
          </div>
        <% end %>
        <% if post.user_id == current_user.id %>
          <%= link_to 'Delete post', post_path(post), method: :delete, data: { confirm: 'Confirm delete'} %>
        <% end %>
        <p> <%= post.created_at.localtime.strftime('%k:%M %d/%m/%Y') %><p>
      <br>
      <% end %> </p>
    </div>

    <div class="column right">
      <div id="subtitle">
        Contacts
      </div>
      <p><-- Your contacts go here --></p>
    </div>
  </div>

</div>

<br>
